<div class="col-md-10">
  <div class="box box-info" style="padding:30px;">
<%= render 'friend/lookup' %>

		<% if @friendships.size > 0 %>
						<table class="table table-striped">

					<thead>

						<tr>

						<th colspan="3" class="page-header">

							<h3>My Friends</h3>

						</th>

						</tr>

						<tr>
							<th></th>
							<th>Name</th>

							<th>Email</th>

							<th>Actions</th>

						</tr>

						</thead>

					<tbody>

							<% @friendships.each do |friend| %>

							<tr>
								<td><%= image_tag(friend.avatar.url(:thumb) , size: "50x50")%></td>
								<td><%= friend.name %></td>

								<td><%= friend.email %></td>

								<td>
								<%= link_to 'Unfriend',unfriend_path(id: friend.id),:method => :delete,	:data => { :confirm => 'Are you sure?' },

								:class => 'btn btn-xs btn-danger' %>

								</td>

							</tr>
							<% end -%>


					</tbody>

				</table>

		<% else %>

					<p class="lead">You don't have any friends yet. Please add some!</p>

	<% end %>

	</div>
</div>
			
